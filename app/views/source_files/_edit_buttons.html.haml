%ul
  %li.toolbar_button
    = render :partial => "button", |
             :object => {:text => "Back",
                         :path => source_file_path(:id => @source_file.id),
                         :icon => "back.png",
                         :title => "Click here to abort editing the source file.",
                         :class => "toolbar_button"}
  %li.toolbar_button
    = render :partial => "button", |
             :object => {:text => "Save",
                         :path => source_file_path(:id => @source_file.id),
                         :icon => "save.png",
                         :title => "Click here to save your changes to the source file.",
                         :id => "save_source_file",
                         :class => "toolbar_button last"}

:javascript
  $(document).ready(function(){
    $("a#save_source_file").click(function(){
      $("form#edit_source_file").submit()
      return false
    })
  })

